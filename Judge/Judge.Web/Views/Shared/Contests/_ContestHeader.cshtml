@model Judge.Application.ViewModels.Contests.ContestsList.ContestItem

<div class="well well-sm text-center">
    @Html.ActionLink(Resources.Tasks, "Tasks", "Contests", new { id = Model.Id }, null)
    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
    @Html.ActionLink(Resources.ContestResults, "Results", "Contests", new { id = Model.Id }, null)
    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
    @(Model.IsStarted ? Model.GetLeftTimeString() : Model.TextStatus)
</div>