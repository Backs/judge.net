@using Markdig
@model Judge.Application.ViewModels.Problems.Statement.StatementViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<p>@Resources.TimeLimit: @Model.TimeLimitSeconds.ToString("F3") @Resources.Seconds</p>
<p>@Resources.MemoryLimit: @Model.MemoryLimitMegabytes.ToString("F3") @Resources.Megabytes</p>

<div class="well well-sm">
    @Html.Raw(Markdown.ToHtml(Model.Statement))
</div>
@if (User.Identity.IsAuthenticated)
{
    <div id="submit-container">
        @Html.Action("SubmitSolution", new { problemId = Model.Id })
    </div>
    <div>
        @Html.Action("UserSubmitQueue", "Submit", new { problemId = Model.Id })
    </div>
}
else
{
    <div>
        @Html.ActionLink(Resources.Enter, "Login", "Account", new { returnUrl = Request.Url.ToString() }, null), @Resources.ToSubmitSolutions
    </div>
}
